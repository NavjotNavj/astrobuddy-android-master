<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmartTextView">
        <attr name="justified_" format="boolean" />
        <attr name="android:textAllCaps" />
        <attr name="android:textStyle" />
        <attr name="font_" format="enum">
            <enum name="thin" value="0" />
            <enum name="reg" value="1" />
            <enum name="thick" value="2" />
        </attr>
    </declare-styleable>

    <!-- tooltip overlay style -->
    <declare-styleable name="TooltipOverlay">
        <attr name="android:color" />
        <attr name="android:alpha" />
        <attr name="ttlm_repeatCount" format="integer" />
        <attr name="ttlm_duration" format="integer" />
        <attr name="android:layout_margin" />
    </declare-styleable>


    <!-- default style of tooltip -->
    <declare-styleable name="TooltipLayout">
        <attr name="ttlm_padding" format="dimension" />
        <attr name="ttlm_strokeColor" format="color" />
        <attr name="ttlm_backgroundColor" format="color" />
        <attr name="ttlm_strokeWeight" format="dimension" />
        <attr name="ttlm_cornerRadius" format="dimension" />
        <attr name="ttlm_arrowRatio" format="float" />
        <attr name="android:textAppearance" />
        <attr name="ttlm_overlayStyle" format="reference" />
        <attr name="ttlm_elevation" format="dimension" />

        <!-- font file path inside your assets folder -->
        <attr name="ttlm_font" format="string" />

        <!-- textview text gravity -->
        <attr name="android:gravity" />
    </declare-styleable>

    <!--style for rated view-->
    <declare-styleable name="RatedView">
        <attr name="total_star" format="integer" />
        <attr name="rated_star" format="integer" />
        <attr name="selected_drawable" format="reference" />
        <attr name="unselected_drawable" format="reference" />
        <attr name="icon_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SegmentedView">
        <attr name="sv_unselectedTextColor" format="reference" />
        <attr name="sv_unselectedColor" format="reference" />
        <attr name="sv_selectedColor" format="reference" />
        <attr name="sv_selectedTextColor" format="reference" />
        <attr name="sv_keys" format="reference" />
        <attr name="sv_values" format="reference" />
        <attr name="sv_stretch" format="boolean" />
        <attr name="sv_defaultSelection" format="integer" />
        <attr name="sv_border_color" format="reference" />
        <attr name="sv_border_width" format="integer" />
        <attr name="sv_corner_radius" format="dimension" />
        <attr name="sv_text_size" format="dimension" />
    </declare-styleable>
</resources>