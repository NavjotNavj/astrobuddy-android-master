<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dasha_planet_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/theme_button_selector"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:text="Venus" />

    <TextView
        android:id="@+id/dasha_level_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/dasha_planet_label"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="Mahadasha" />

    <TextView
        android:id="@+id/dasha_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dasha_level_label"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/dasha_planet_label"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white_transparent_70"
        android:textSize="14sp"
        tools:text="2-5-2018 9:20 - 2-5-2018 9:20" />


</RelativeLayout>