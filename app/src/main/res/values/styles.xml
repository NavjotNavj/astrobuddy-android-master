<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
    </style>

    <style name="commonEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gunmetal</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="OTPEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">2</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gunmetal</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="commonButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/_50sdp</item>
        <item name="android:paddingRight">@dimen/_50sdp</item>
        <item name="android:background">@drawable/theme_button_curve_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="squareButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/theme_button_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="whiteSquareButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/gunmetal</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/white_button_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="commonTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ProfileTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LoginRegisterImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/black</item>
    </style>


    <style name="chatRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/chat_rating_bar</item>
    </style>


    <!-- Tooltip Styles -->
    <style name="ToolTipLayoutDefaultStyle.Custom1">
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolTipLayoutCustomStyle">
        <item name="ttlm_padding">25dip</item>
        <item name="ttlm_strokeColor">@color/colorPrimary</item>
        <item name="ttlm_backgroundColor">@color/colorPrimary</item>
        <item name="ttlm_strokeWeight">1px</item>
        <item name="ttlm_cornerRadius">5dip</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayCustomStyle</item>
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>

    <style name="ToolTipLayoutCustomLightStyle">
        <item name="ttlm_padding">15dp</item>
        <item name="ttlm_strokeColor">@color/white</item>
        <item name="ttlm_backgroundColor">@color/white</item>
        <item name="ttlm_strokeWeight">1px</item>
        <item name="ttlm_cornerRadius">5dip</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayCustomStyle</item>
        <item name="android:textAppearance">@style/ToolTipTextAppearance</item>
    </style>

    <style name="ToolTipTextAppearance">
        <item name="android:textColor">@color/gunmetal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolTipOverlayCustomStyle">
        <item name="android:color">@color/colorAccent</item>
        <item name="ttlm_repeatCount">999</item>
        <item name="ttlm_duration">1000</item>
    </style>

    <style name="ToolTipLayoutDefaultStyle.CustomFont" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_font">fonts/Verdana.ttf</item>
    </style>

</resources>
